extends layout

block content
  .row
    .col-sm-8
      h1= title
      h3= price
      p
        img.img-responsive(src="https://members.dlat.org/membership/wp-content/uploads/2014/10/google-apps-for-business.jpg")
      p= description

    .col-sm-4.demo
      h4 FREE Valet Migration to Google Apps
      p.
        Let us handle the move while you focus on your business!
        Contact today for FREE migration: 

      form(action='/leads', method='POST')

        .form-group
          label(for='name') Your Name
          input.form-control(type='text', name='name',
            placeholder='Your Name')

        .form-group
          label(for='phone') Your Phone Number
          input.form-control(type='text', name='phone',
            placeholder='Phone Number')

        .form-group
          label(for='message') Your Business Name?
          input.form-control(type='text', name='message',
            placeholder='')        

        button.btn.btn-primary(type='submit') Request Info

block scripts
  script(src='form.js')
